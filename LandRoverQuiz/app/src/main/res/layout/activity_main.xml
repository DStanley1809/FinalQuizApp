<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8d2a0"
    tools:context="com.example.android.landroverquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8d2a0"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/quizLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/intro_text"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Q1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/q1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q1_text"
                android:textSize="14sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/textEntryQ1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:hint="@string/q1_hint"
            android:inputType="textCapWords"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Q2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/q2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q2_text"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/mauricewilks" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_o1_text"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_o2_text"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_o3_text"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_o4_text"
                android:textSize="14sp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Q3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/q3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q3_text"
                android:textSize="14sp" />

        </LinearLayout>

        <Spinner
            android:id="@+id/q3Spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp">

        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Q4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/q4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q4_text"
                android:textSize="14sp" />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/q4ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#05703b"
            android:showText="true"
            android:textColor="#cdaf7b"
            android:textOff="@string/toggle_off"
            android:textOn="@string/toggle_on"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Q5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/q5_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q5_text"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/q5_cb1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/q5_cb1" />

            <CheckBox
                android:id="@+id/q5_cb2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/q5_cb1"
                android:text="@string/q5_cb2" />

            <CheckBox
                android:id="@+id/q5_cb3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb1"
                android:layout_margin="10dp"
                android:text="@string/q5_cb3" />

            <CheckBox
                android:id="@+id/q5_cb4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb2"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/q5_cb3"
                android:text="@string/q5_cb4" />

            <CheckBox
                android:id="@+id/q5_cb5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb3"
                android:layout_margin="10dp"
                android:text="@string/q5_cb5" />

            <CheckBox
                android:id="@+id/q5_cb6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb4"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/q5_cb5"
                android:text="@string/q5_cb6" />

            <CheckBox
                android:id="@+id/q5_cb7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb5"
                android:layout_margin="10dp"
                android:text="@string/q5_cb7" />

            <CheckBox
                android:id="@+id/q5_cb8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/q5_cb6"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/q5_cb7"
                android:text="@string/q5_cb8" />

        </RelativeLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/oval_button"
            android:onClick="submitAnswers"
            android:text="@string/submit_button"
            android:textAllCaps="true"
            android:textColor="#cdaf7b"
            android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultShareScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/oval_button"
                android:onClick="resetScores"
                android:text="@string/reset_button"
                android:textAllCaps="true"
                android:textColor="#cdaf7b"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/shareButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/oval_button"
                android:text="@string/share_button"
                android:textAllCaps="true"
                android:textColor="#cdaf7b"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:onClick="shareScore"/>

        </LinearLayout>

